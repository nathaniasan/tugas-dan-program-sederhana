#include <ncurses.h>
#include <iostream>
#include "windows.h" //untuk windows
using namespace std;


void halo(){
	
	refresh();
	Sleep(500);
	clear();
	
	
}

int main(){

	initscr();

	int n=10;
	for(int i=1; i< n; i++) {
		
		for(int j=0; j< i;j++) {
			
			mvprintw(i,j, "luv<3");
			refresh();
			halo();
}
		
		
}
	getch();
	endwin();
}
